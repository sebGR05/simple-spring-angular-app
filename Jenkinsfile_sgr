pipeline {
	agent {
		docker {
			image 'node:6-alpine'
			args '-p 3000:3000'
		}
	}
	stages {
		stage('Build') {
			steps {
				sh 'npm install'
			}
		}
	}
pipeline {
	agent {
		docker {
			image 'openjdk:8-jdk-alpine'
			args '-p 8002:8000'
		}
	}
	stages {
        stage('check_java') {
			steps {
				steps {   
                    sh "java -version"
                }
			}
		}
	}
}