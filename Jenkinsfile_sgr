pipeline {
    agent {
        docker {
            image 'openjdk:8-jdk-alpine'
            args '-p 8085:8080'
        }
    }
    triggers {
        cron('H/1 * * * *')
    }
    stages {
        stage('check_java') {
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}